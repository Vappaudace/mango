rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Photos de profil — lecture publique, écriture par l'owner uniquement
    match /photos/{uid}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024  // max 5 MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Messages vocaux — lecture par les participants du match, écriture par l'expéditeur
    match /audio/{matchId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // max 10 MB
                   && (request.resource.contentType.matches('audio/.*'));
    }
  }
}
